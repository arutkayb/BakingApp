<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".recipes.recipe_step_details.DetailedRecipeStepsActivity"
    android:layout_weight="@dimen/recipe_step_details_parent_weight">

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/recipe_step_details_steps_weight"
        android:id="@+id/detailed_recipe_steps_recycler_view"
        android:background="@color/colorPrimaryLight"
        android:layout_marginRight="@dimen/common_fragment_margin_right">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="@dimen/recipe_step_details_media_weight"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recipe_step_details_media_header"/>

        <FrameLayout
            android:id="@+id/recipe_step_details_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>
    </LinearLayout>


</LinearLayout>