<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recipes.recipes_overview.RecipesMasterActivity"
    android:baselineAligned="false"
    android:weightSum="@dimen/recipes_master_parent_weight"
    android:orientation="horizontal">

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@dimen/recipes_overview_weight"
        android:id="@+id/recycler_view_recipes_overview"
        android:layout_marginRight="@dimen/common_fragment_margin_right">

    </android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/recipe_details_fragment_container"
        android:layout_weight="@dimen/recipe_details_weight">

    </FrameLayout>
</LinearLayout>