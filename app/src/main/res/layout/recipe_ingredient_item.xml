<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/recipe_item_common_margin"
    android:background="@color/colorPrimaryAlmostWhite">

    <ImageView
        android:layout_width="@dimen/ingredient_thumbnail_width"
        android:layout_height="@dimen/ingredient_thumbnail_height"
        android:scaleType="center"
        android:layout_margin="@dimen/icon_thumbnail_margin"
        android:background="@drawable/ingredient_icon"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ingredient_name"
            style="@style/Content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quantity"
            style="@style/Content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/measure"
            style="@style/Content"/>

    </LinearLayout>

</LinearLayout>